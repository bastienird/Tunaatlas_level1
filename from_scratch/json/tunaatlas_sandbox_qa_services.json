{
  "profile": {
    "id": "tuna-atlas-services",
    "mode": "entity",
  	"project": "FIRMS Tuna Atlas",
  	"organization": "FIRMS Tuna Atlas",
  	"logos": [
  		"http://firms.fao.org/figis/website/assets/images/templates/firms/firms_banner.gif",
  		"https://www.blue-cloud.org/sites/default/files/styles/logo_small/public/FAO_2lines_500x500_1.png?itok=igwPSL5v",
  		"https://en.ird.fr/sites/ird_fr/files/2019-08/logo_IRD_2016_BLOC_UK_COUL.png"
  	],
  	"options": {
    	"line_separator": "_\n"
    }
  },
  "metadata": {
  	"dictionary" : [
  	  {
  	  "handler": "gsheet",
  	  "source": "https://docs.google.com/spreadsheets/d/166f_fIB9ctwdsRI8MCqKmfYtyh6DPbipHp8_qVjrIs8/edit#gid=0"
  	  }
  	],
    "entities": [
      {
        "handler": "dbi",
        "source": "SELECT * FROM metadata.metadata_dcmi"
      }
    ],
    "contacts" : [
      {
      "handler": "gsheet",
      "source": "https://docs.google.com/spreadsheets/d/1DtGR8cHAkro12DOFZn40cehfU9LoI9l7wVUCHfHH-xY/edit?usp=sharing"
      }
    ]
  },
  "software": [
 	{
		"id": "my-database-write",
		"type": "input",
		"software_type": "dbi",
		"parameters": {
		    "drv": "{{DB_DRV}}",
		    "user": "{{DB_TUNA_USER}}",
		    "password": "{{DB_TUNA_PWD}}",
		    "host": "{{DB_TUNA_HOST}}",
		    "port": "{{DB_PORT}}",
		    "dbname": "{{DB_TUNA_NAME}}"
		},
		"properties" : {}
	},
	{
		"id": "my-database-read",
		"type": "input",
		"software_type": "dbi",
		"parameters": {
		    "drv": "{{DB_DRV}}",
		    "user": "{{DB_TUNA_USER}}",
		    "password": "{{DB_TUNA_PWD}}",
		    "host": "{{DB_TUNA_HOST}}",
		    "port": "{{DB_PORT}}",
		    "dbname": "{{DB_TUNA_NAME}}"
		},
		"properties" : {}
	},
		{
		"id": "my-geonetwork",
		"type": "output",
		"software_type": "geonetwork",
		"parameters": {
			"url": "{{GEONETWORK_OREME_URL}}",
			"user": "{{GEONETWORK_OREME_USER}}",
			"pwd": "{{GEONETWORK_OREME_PASSWORD}}",
			"version": "3.0.4.0",
			"logger": "DEBUG"
		}
	},
	{
		"id": "my-geoserver",
		"type": "output",
		"software_type": "geoserver",
		"parameters": {
			"url": "{{GEOSERVER_URL}}",
			"user": "{{GEOSERVER_USER}}",
			"pwd": "{{GEOSERVER_PASSWORD}}",
			"logger": "DEBUG"
		},
		"properties" : {
			"workspace": "tunaatlas",
			"datastore": "tunaatlas_store"
		}
	},
	{
		"id": "googledrive",
		"type": "input",
		"software_type": "googledrive",
		"parameters": {
			"email": "{{GMAIL_FIRMS_USER}}",
			"token": ""
		},
		"properties" : {}
	}
  ],
  "actions": [
	{
    "id": "geometa-create-iso-19115",
    "run": true,
	  "options": {
  		"logo": true,
  		"doi": false,
  		"doi_thumbnail": false,
  		"addfeatures": false
	  }
    },
	{
	  "id": "geometa-create-iso-19110",
	  "run": false,
	  "options" : {
	    "exclude_attributes" : ["time_start", "time_end", "id_area", "longitude", "latitude"],
	    "exclude_attributes_not_in_dictionary": false,
		  "exclude_values_for_attributes": ["geographic_identifier", "time_start", "time_end", "catchtype"],
		  "extra_attributes": "aggregation_method"
	  }
	},
	{
	  "id": "geonapi-publish-iso-19139",
	  "run": true
	},
	{
	  "id": "geosapi-publish-ogc-services",
	  "run": false
	}  
 ]
}
